{
    "name": "platform/permissions",
    "type": "platform-extension",
    "description": "A Platform 6 extension to manage your application permissions.",
    "keywords": [
        "cartalyst",
        "platform",
        "laravel",
        "extension"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com",
            "homepage": "https://cartalyst.com"
        }
    ],
    "repositories": [
        { "type": "composer", "url": "https://packages.cartalyst.com" }
    ],
    "require": {
        "php": ">=5.6.4",
        "cartalyst/composer-installers": "1.2.*",
        "cartalyst/permissions": "1.0.*",
        "platform/foundation": "dev-feature/six"
    },
    "require-dev": {
        "cartalyst/testing": "~2.0@dev"
    },
    "autoload": {
        "classmap": [
            "resources/database/migrations",
            "resources/database/seeds"
        ],
        "psr-4": { "Platform\\Permissions\\" : "src/" }
    },
    "extra": {
        "component": "extension",
        "branch-alias": {
            "dev-master": "5.0.x-dev"
        }
    },
    "minimum-stability": "stable"
}
